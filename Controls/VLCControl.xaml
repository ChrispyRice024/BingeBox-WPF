<UserControl x:Class="WPF_BingeBox.Controls.VLCControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
             xmlns:i="clr-namespace:System.Windows.Interop;assembly=PresentationCore"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_BingeBox.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid x:Name="PlayerGrid">
            <vlc:VideoView x:Name="VideoPlayer"
                           MediaElement.MediaEnded="VideoPlayer_MediaEnded"
                           Background="Black">
                <local:PlaybackControls x:Name="VideoControls"/>
            </vlc:VideoView>
        </Grid>
    </Grid>
</UserControl>
